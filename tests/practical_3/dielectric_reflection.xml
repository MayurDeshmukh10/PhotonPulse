<test type="image" id="dielectric_reflection">
    <integrator type="direct">
        <scene id="scene">
            <camera type="perspective" id="camera">
                <integer name="width" value="500"/>
                <integer name="height" value="250"/>

                <string name="fovAxis" value="x"/>
                <float name="fov" value="90"/>

                <transform>
                    <translate z="-2.2"/>
                </transform>
            </camera>

            <light type="envmap">
                <texture type="image" filename="../textures/kloofendal_overcast_1k.hdr"/>
                <transform>
                    <rotate axis="0,1,0" angle="100"/>
                </transform>
            </light>

            <instance>
                <shape type="rectangle"/>
                <bsdf type="dielectric">
                    <texture name="ior" type="constant" value="1.7"/>
                    <texture name="reflectance" type="constant" value="1,0.8,0.7"/>
                    <texture name="transmittance" type="constant" value="0"/>
                </bsdf>
                <transform>
                    <translate x="1.1"/>
                </transform>
            </instance>
            <instance>
                <shape type="rectangle"/>
                <bsdf type="dielectric">
                    <texture name="ior" type="constant" value="1.7"/>
                    <texture name="reflectance" type="constant" value="1,0.8,0.7"/>
                    <texture name="transmittance" type="constant" value="0"/>
                </bsdf>
                <transform>
                    <translate x="1.1"/>
                    <rotate axis="0,1,0" angle="180"/>
                </transform>
            </instance>
        </scene>
        <sampler type="independent" count="256"/>
    </integrator>
</test>
